<resources>
    <!-- Night theme. -->
    <style name="Theme.MyApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDarkNight</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryNight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryNight</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDarkNight</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryNight</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:statusBarColor" >@color/colorPrimaryDarkNight</item>
        <item name="toolbarColor">@color/colorOnPrimaryNight</item>
        <!-- Customize other theme attributes. -->
    </style>

    <style name="Theme.MyApp.ActionBar" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDarkNight</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryNight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryNight</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDarkNight</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryNight</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:statusBarColor" >@color/colorPrimaryDarkNight</item>
        <item name="toolbarColor">@color/colorOnPrimaryNight</item>
        <!-- Customize other theme attributes. -->
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/colorSecondaryNight</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabSelectedTextColor">@color/colorSecondaryNight</item>
        <item name="background">?attr/toolbarColor</item>
        <item name="tabTextColor">@color/colorOnSecondaryNight</item>
        <item name="tabRippleColor">@color/tabRippleColor</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>
</resources>